{
  "name": "cashflow",
  "version": "2.0.0",
  "description": "Registro Contanti - Future Dance School - Desktop Application",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"wait-on http://localhost:3000 && electron . --dev\"",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "build:win": "npm run build:frontend && electron-builder --win",
    "build:mac": "npm run build:frontend && electron-builder --mac",
    "build:linux": "npm run build:frontend && electron-builder --linux",
    "build:all": "npm run build:frontend && electron-builder --win --mac --linux",
    "dist": "npm run clean && npm run build",
    "dist:win": "npm run clean && npm run build:win",
    "start": "electron .",
    "test": "npm run test:frontend",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rimraf dist frontend/dist",
    "postinstall": "electron-builder install-app-deps",
    "setup:github": "./scripts/setup-github.sh",
    "release": "./scripts/create-release.sh"
  },
  "keywords": [
    "registro",
    "contanti",
    "dance",
    "school",
    "electron",
    "react",
    "typescript",
    "local"
  ],
  "author": "Future Dance School",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "better-sqlite3": "^9.2.2",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.futuredanceschool.cashflow",
    "productName": "Registro Contanti",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/README.md",
      "!node_modules/**/CHANGELOG.md",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/package.json",
      "!node_modules/**/yarn.lock",
      "!node_modules/**/pnpm-lock.yaml"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publisherName": "Future Dance School"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Registro Contanti"
    }
  }
}
